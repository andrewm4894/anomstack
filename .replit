modules = ["python-3.11", "bash"]
hidden = [".config", ".pytest_cache"]

[nix]
channel = "stable-24_05"

[[ports]]
localPort = 8080
externalPort = 80

[[ports]]
localPort = 3000
externalPort = 3000

[workflows]
runButton = "Dashboard Only"

[[workflows.workflow]]
name = "Full Stack"
author = 26773340
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m uvicorn dashboard.app:app --host 0.0.0.0 --port 8080"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m dagster dev -h 0.0.0.0 -p 3000 -f anomstack/main.py"

[[workflows.workflow]]
name = "Dashboard Only"
author = 26773340
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m uvicorn dashboard.app:app --host 0.0.0.0 --port 8080 --reload"

[[workflows.workflow]]
name = "Backend Only"
author = 26773340
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m dagster dev -h 0.0.0.0 -p 3000 -f anomstack/main.py"

[deployment]
deploymentTarget = "cloudrun"
run = ["sh", "-c", "python -m uvicorn dashboard.app:app --host 0.0.0.0 --port 8080"]
