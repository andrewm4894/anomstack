# Anomstack Local Development Profile
# This profile configures Anomstack for local dashboard development
# with seeded dummy data for rapid UI iteration

# =============================================================================
# LOCAL DEVELOPMENT PROFILE
# =============================================================================

# Use local development database with seeded dummy data
ANOMSTACK_DUCKDB_PATH=tmpdata/anomstack-local-dev.db

# Store models locally in development
ANOMSTACK_MODEL_PATH=local://./models

# Enable examples so we can use python_ingest_simple (it's in the examples directory)
ANOMSTACK_IGNORE_EXAMPLES=no

# Enable dashboard debug mode for development
ANOMSTACK_DASHBOARD_DEBUG=true

# Enable python_ingest_simple metric batch (our seeded data) - uses defaults for enable flags
ANOMSTACK__PYTHON_INGEST_SIMPLE__INGEST_DEFAULT_SCHEDULE_STATUS=STOPPED
ANOMSTACK__PYTHON_INGEST_SIMPLE__TRAIN_DEFAULT_SCHEDULE_STATUS=STOPPED
ANOMSTACK__PYTHON_INGEST_SIMPLE__SCORE_DEFAULT_SCHEDULE_STATUS=STOPPED
ANOMSTACK__PYTHON_INGEST_SIMPLE__ALERT_DEFAULT_SCHEDULE_STATUS=STOPPED

# Disable other metric batches to focus on our seeded data
ANOMSTACK__NETDATA__DISABLE_DASHBOARD=true
ANOMSTACK__HACKERNEWS__DISABLE_DASHBOARD=true
ANOMSTACK__WEATHER__DISABLE_DASHBOARD=true
ANOMSTACK__YFINANCE__DISABLE_DASHBOARD=true
ANOMSTACK__COINDESK__DISABLE_DASHBOARD=true
ANOMSTACK__GITHUB__DISABLE_DASHBOARD=true
ANOMSTACK__EARTHQUAKE__DISABLE_DASHBOARD=true
ANOMSTACK__EIRGRID__DISABLE_DASHBOARD=true
ANOMSTACK__POSTHOG__DISABLE_DASHBOARD=true
ANOMSTACK__PROMETHEUS__DISABLE_DASHBOARD=true
ANOMSTACK__NETDATA_HTTPCHECK__DISABLE_DASHBOARD=true
ANOMSTACK__CURRENCY__DISABLE_DASHBOARD=true
ANOMSTACK__ISS_LOCATION__DISABLE_DASHBOARD=true
ANOMSTACK__TOMTOM__DISABLE_DASHBOARD=true

# Development-friendly settings
ANOMSTACK_MAX_RUNTIME_SECONDS_TAG=300 